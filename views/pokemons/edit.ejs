<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f9f9f9;
    margin: 0;
    padding: 0;
  }

  .container {
    max-width: 600px;
    margin: 50px auto;
    background: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  h2 {
    font-size: 28px;
    color: #333;
    margin-bottom: 20px;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 15px;
    align-items: center;
  }

  label {
    font-size: 16px;
    color: #555;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
  }

  input[type="text"],
  select {
    padding: 10px;
    font-size: 14px;
    border: 1px solid #ccc;
    border-radius: 4px;
    width: 100%;
    box-sizing: border-box;
  }

  input[type="text"]:focus,
  select:focus {
    border-color: #007bff;
    outline: none;
    box-shadow: 0 0 4px rgba(0, 123, 255, 0.3);
  }

  button {
    padding: 12px 20px;
    font-size: 16px;
    color: #fff;
    background-color: #007bff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  button:hover {
    background-color: #0056b3;
  }

  .cancel-link {
    display: block;
    margin-top: 20px;
    font-size: 16px;
    color: #007bff;
    text-decoration: none;
  }

  .cancel-link:hover {
    color: #0056b3;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .container {
      margin: 20px;
      padding: 15px;
    }

    h2 {
      font-size: 24px;
    }

    button {
      padding: 10px 15px;
      font-size: 14px;
    }

    .cancel-link {
      font-size: 14px;
    }
  }

  @media (max-width: 480px) {
    h2 {
      font-size: 20px;
    }

    button {
      padding: 8px 12px;
      font-size: 12px;
    }

    .cancel-link {
      font-size: 12px;
    }
  }
  

  .footer {
    text-align: center;
    margin-top: 20px;
    font-size: 14px;
    color: #777;
  }
  .footer a {
    color: #007bff;
    text-decoration: none;
  }
</style>

<%- include('../partials/header') %>
<div class="container">
  <h2>Edit <%= pokemon.name %></h2>
  <form action="/pokemons/<%= pokemon.id %>?_method=PUT" method="POST">
    <label>
      Name:
      <input type="text" name="name" value="<%= pokemon.name %>" required />
    </label>
    <label>
      Type:
      <select name="type_id" required>
        <% types.forEach(t => { %>
          <option value="<%= t.id %>" <%= t.id === pokemon.type_id ? 'selected' : '' %>><%= t.name %></option>
        <% }) %>
      </select>
    </label>
    <label>
      Trainer:
      <select name="trainer_id">
        <option value="" <%= !pokemon.trainer ? 'selected' : '' %>>— none —</option>
        <% trainers.forEach(tr => { %>
          <option value="<%= tr.id %>" <%= tr.name === pokemon.trainer ? 'selected' : '' %>><%= tr.name %></option>
        <% }) %>
      </select>
    </label>
    <button type="submit">Update</button>
  </form>
  <a href="/pokemons/<%= pokemon.id %>" class="cancel-link">← Cancel</a>
</div>


<div class="footer">
  <%- include('../partials/footer') %>
</div>