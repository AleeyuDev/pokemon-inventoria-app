<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f9f9f9;
    margin: 0;
    padding: 0;
  }

  .container {
    max-width: 600px;
    margin: 50px auto;
    background: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  h2 {
    text-align: center;
    font-size: 28px;
    color: #333;
    margin-bottom: 20px;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  label {
    font-size: 16px;
    color: #555;
    display: flex;
    flex-direction: column;
  }

  input[type="text"],
  select {
    padding: 10px;
    font-size: 14px;
    border: 1px solid #ccc;
    border-radius: 4px;
    width: 100%;
    box-sizing: border-box;
  }

  input[type="text"]:focus,
  select:focus {
    border-color: #007bff;
    outline: none;
    box-shadow: 0 0 4px rgba(0, 123, 255, 0.3);
  }

  button {
    padding: 12px 20px;
    font-size: 16px;
    color: #fff;
    background-color: #007bff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  button:hover {
    background-color: #0056b3;
  }

  select {
    appearance: none;
    background: #fff;
    cursor: pointer;
  }

  option {
    font-size: 14px;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .container {
      margin: 20px;
      padding: 15px;
    }

    h2 {
      font-size: 24px;
    }

    button {
      padding: 10px 15px;
      font-size: 14px;
    }
  }

  @media (max-width: 480px) {
    h2 {
      font-size: 20px;
    }

    button {
      padding: 8px 12px;
      font-size: 12px;
    }

    label {
      font-size: 14px;
    }

    input[type="text"],
    select {
      font-size: 12px;
    }
  }
</style>

<%- include('../partials/header') %>
<div class="container">
  <h2>New Pokémon</h2>
  <form action="/pokemons" method="POST">
    <label>
      Name:
      <input type="text" name="name" required />
    </label>
    <label>
      Type:
      <select name="type_id" required>
        <% types.forEach(t => { %>
        <option value="<%= t.id %>"><%= t.name %></option>
        <% }) %>
      </select>
    </label>
    <label>
      Trainer:
      <select name="trainer_id">
        <option value="">— none —</option>
        <% trainers.forEach(tr => { %>
        <option value="<%= tr.id %>"><%= tr.name %></option>
        <% }) %>
      </select>
    </label>
    <button type="submit">Create</button>
  </form>
</div>
<%- include('../partials/footer') %>
