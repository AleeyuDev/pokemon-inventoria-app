<style>
  body {
    font-family: Arial, sans-serif;
    background-color: #f9f9f9;
    margin: 0;
    padding: 0;
  }

  .container {
    max-width: 800px;
    margin: 50px auto;
    background: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  h2 {
    font-size: 28px;
    color: #333;
    margin-bottom: 20px;
    text-align: center;
  }

  a {
    text-decoration: none;
    color: #007bff;
    font-size: 16px;
    transition: color 0.3s ease;
  }

  a:hover {
    color: #0056b3;
    text-decoration: underline;
  }

  .new-pokemon-link {
    display: inline-block;
    margin-bottom: 20px;
    padding: 10px 15px;
    font-size: 16px;
    color: #fff;
    background-color: #28a745;
    border: none;
    border-radius: 4px;
    text-align: center;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .new-pokemon-link:hover {
    background-color: #218838;
  }

  ul {
    list-style-type: none;
    padding: 0;
  }

  li {
    margin-bottom: 15px;
    font-size: 16px;
    color: #555;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #ddd;
    padding-bottom: 10px;
  }

  li:last-child {
    border-bottom: none;
  }

  .pokemon-details {
    font-size: 14px;
    color: #777;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .container {
      margin: 20px;
      padding: 15px;
    }

    h2 {
      font-size: 24px;
    }

    .new-pokemon-link {
      font-size: 14px;
      padding: 8px 12px;
    }

    li {
      flex-direction: column;
      align-items: flex-start;
    }

    .pokemon-details {
      font-size: 12px;
      margin-top: 5px;
    }
  }

  @media (max-width: 480px) {
    h2 {
      font-size: 20px;
    }

    .new-pokemon-link {
      font-size: 12px;
      padding: 6px 10px;
    }

    li {
      font-size: 14px;
    }

    .pokemon-details {
      font-size: 12px;
    }
  }
</style>

<%- include('../partials/header') %>
<div class="container">
  <h2>All Pokémons</h2>
  <a href="/pokemons/new" class="new-pokemon-link">+ New Pokémon</a>
  <ul>
    <% pokemons.forEach(p => { %>
    <li>
      <a href="/pokemons/<%= p.id %>"><%= p.name %></a>
      <span class="pokemon-details">
        (<%= p.type %>, <%= p.trainer || 'No Trainer' %>)
      </span>
    </li>
    <% }) %>
  </ul>
</div>
<div class="footer"><%- include('../partials/footer') %></div>
